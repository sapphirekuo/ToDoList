<% if @todo.errors.present? %>
  <ul>
    <% @todo.errors.each do |error, message| %>
      <li><%= "#{error.capitalize} #{message}" %></li>
    <% end %>
  </ul>
  <% end %>

<div class="form container">
  <%= form_for @todo do |f| %>

    <div class="form-group">    
      <%= f.label :name, "List Name" %>
      <%= f.text_field :name, class: "form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :duedate, "Due Date" %>
      <%= f.text_field :duedate, class: "form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :note, "Note" %>
      <%= f.text_area :note, class: "form-control"%>
    </div>

    <%= f.submit %>
  <% end %>
</div>